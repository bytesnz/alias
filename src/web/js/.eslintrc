{
  "ecmaVersion": 6,
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "globals": {
    "io": true
  },
  "rules": {
    "camelcase": 1,
    "comma-dangle": 2,
    "curly": 2,
    "no-caller": 2,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-extra-semi": 1,
    "no-invalid-regexp": 2,
    "no-redeclare": 2,
    "no-shadow": 2,
    "no-unused-vars": 1,
    "no-undef": 2,
    "no-var": 0, // TODO 1,
    "require-jsdoc": [2, {
      "require": {
        "FunctionDeclaration": true,
        "MethodDefinition": true,
        "ClassDeclaration": true
      }
    }],
    "no-warning-comments": 1,
    "semi": 2,
    "strict": 1,
    "valid-jsdoc": 2,
    "valid-typeof": 2
  }
}
